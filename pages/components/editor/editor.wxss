@import "./assets/iconfont.wxss";
.ql-container {
  font-size: 16px;
  line-height: 1.5;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: flex;
  width: 60rpx;
  height: 60rpx;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.toolbar {
  padding: 0 16rpx;
  height: 200rpx;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border-top: 1px solid #ECECEC;
  background-color: white;
}